<div class="container">
  <h1><%= @article.title %></h1>
  <div class="text">
    <p><%= @article.content %></p>
  </div>

  <span class="btn"><%= link_to("Edit this article", edit_article_path) %></span>
  <span class="btn"><%= link_to "Delete #{@article.title}",
              article_path(@article),
              method: :delete,
              data: { confirm: "Are you sure?" } %></span>
  <span class="btn" id="back"><%= link_to("Back to Articles", articles_path) %></span>
</div>
